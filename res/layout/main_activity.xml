<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/main_iv_target_image"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="240dp" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="?android:attr/listDivider" />
  	
    <LinearLayout
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    	
    	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="        隐写状态(StegStat):  "
	        android:layout_margin="1dp" />
        
	    <TextView
	        android:id="@+id/main_tv_stegstat"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="left"
	        android:layout_margin="1dp" />
	    
    </LinearLayout>
    
	
    <View 
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="?android:attr/listDivider" />
  	
    <EditText
        android:layout_width="0px"
   		android:layout_height="0px" />
    <EditText
        android:id="@+id/main_et_secret_message"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
    	android:gravity="top"
    	android:singleLine="false"
    	android:layout_weight="1"
    	android:hint="这里是秘密消息..."
    	android:textColorHint="#888888"
    	android:layout_margin="4dp" />
    
	<Button
        android:id="@+id/main_btn_secret_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这里是秘密文件..."
        android:textSize="26sp" />
        
    <View 
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="?android:attr/listDivider" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="1dp" >
        
        <Button
            android:id="@+id/main_btn_steg_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="隐写消息"
            android:textSize="28sp" />
        <Button
            android:id="@+id/main_btn_steg_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="隐写文件"
            android:textSize="28sp" />
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="1dp" >

        <Button
            android:id="@+id/main_btn_extract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提取"
            android:textSize="28sp" />
    </LinearLayout>

</LinearLayout>